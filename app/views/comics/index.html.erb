<% if user_signed_in? %>
  <h1>一覧画面</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">登録番号</th>
        <th scope="col">漫画名</th>
        <th scope="col">値段</th>
        <th scope="col">作者名</th>
      </tr>
    </thead>
  <% @comics.each do |comic| %>
    <tbody>
      <tr>
        <th scope="row"><%= comic.id %></th>
        <td><%= comic.name %></td>
        <td><%= comic.price %></td>
        <td><%= comic.author %></td>
      </tr>
    </tbody>
  <% end %>
  </table>
<% else %>
  <p>ログインしてください</p>
<% end %>
